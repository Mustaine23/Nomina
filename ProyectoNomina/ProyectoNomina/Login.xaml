        <Label x:Name="label1" Content="Password" HorizontalAlignment="Left" Margin="56,148,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Iniciar Sesión" HorizontalAlignment="Left" Margin="121,64,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="140,148,0,0" VerticalAlignment="Top" Width="120"/>
    </Canvas>
